    <title>سفارشات</title>
</head>
<body>
    <%- include('./admin-nav', {'categories':categories, 'path': ''}) %>
    <main class='main-content'>
        <div class="orders-container p-3">
            <p class="text-center">صفحه  <%= options.page %></p>
            <% for(let order of orders) { %>
            <div class="order mb-4 border p-3">
                <div class= "d-flex pb-3 align-items-center border-bottom flex-wrap order-header">
                    <div class="order-info"><%= order.orderDateStr %></div>
                    <div class="order-info"><%= order.orderNo %></div>                  
                    
                    <div class="order-info mr-md-3 "><span class="text-secondary">مبلغ کل : </span><%= order.totalCost%></div>
                    <div class="order-info"><span class="text-secondary">مبلغ قابل پرداخت: </span><%= order.payable %></div>
                    <div class="order-info <%= order.deliveryStat + '-text' %>" ><%= order.deliveryStat=='delivered'?'تحویل شده در ' + order.deliveryDateStr: order.deliveryStat=='pending'?'در حال پردازش':'لغو شده'%></div>
                    <a class="mr-auto pt-2" href="/admin/orders/<%= order.orderNo %>">مشاهده جزییات ></a>
                </div>
                <div class="d-flex flex-wrap pt-3">
                    <div class="">خودکار بیک لیوانی</div>
                    <div class=" mx-2 text-secondary">|</div>
                    <div>خودکار کنکو زرد</div>
                </div>
            </div>  
            <% } %>
            <p class="text-center mb-3">صفحه  <%= options.page %></p>
            <nav aria-label="Page navigation">
                <ul class="pagination">
                  <li class="page-item <%= options.page=='1'? 'disabled':'' %>">
                    <a class="page-link" href="<%= options.page=='1'? '' :'/admin/orders?page='+ (+options.page - 1) %>" aria-label="previous">
                      قبلی 
                    </a>
                  </li>
                  <% if (options.page !='1') { %>
                  <li class="page-item"><a class="page-link" href="/admin/orders?page=<%= +options.page -1 %>"><%= +options.page -1 %></a></li>
                  <% } %>
                  <li class="page-item"><a class="page-link" href="/admin/orders?page=<%= +options.page %>"><%= +options.page  %></a></li>
                  <% if (!options.isLastPage) {%>
                  <li class="page-item"><a class="page-link" href="/admin/orders?page=<%= +options.page + 1 %>"><%= +options.page +1 %></a></li>
                  <% } %>
                  <li class="page-item <%= options.isLastPage?'disabled':'' %>">
                    <a class="page-link" href="<%= options.isLastPage?'': '/admin/orders?page='+ (+options.page + 1) %>" aria-label="Next">
                     بعدی
                    </a>
                  </li>
                </ul>
              </nav>   
        </div>
    </main>
